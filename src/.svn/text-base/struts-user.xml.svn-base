<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <!-- User Module Action -->
    <package name="user"  extends="admin-default">
        <action name="user_*" method="{1}" class="com.stark.asm.web.action.user.UserAction">
            <!-- user information -->
            <result name="{1}">/backgroud/user/{1}.jsp</result>
        </action>
        <action name="myInfo" method="myInfo" class="com.stark.asm.web.action.user.UserAction">
            <result>/front/userInfo.jsp</result>
            <result name="error" type="redirect">toLogin.action</result>
        </action>
        <action name="updateUserPassword" method="updateUserPassword" class="com.stark.asm.web.action.user.UserAction">
            <result>/front/updateUserPassword.jsp</result>
            <result name="error" type="redirect">toLogin.action</result>
        </action>
        
    </package>


    <!-- User Module Json -->
    <package name="user_json"  extends="json-protected-default">
        <!-- user information  Json -->
        <action name="userJson_*" method="{1}" class="com.stark.asm.web.action.user.json.UserJsonAction">
            <result name="out" type="json">
                <param name="ignoreHierarchy">true</param>
                <param name="excludeNullProperties">true</param>
                <param name="root">result</param>
            </result>
        </action>
        
        <action name="register" method="register" class="com.stark.asm.web.action.user.json.UserJsonAction">
            <result name="out" type="json">
                <param name="ignoreHierarchy">true</param>
                <param name="excludeNullProperties">true</param>
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <!-- 等级模块 Action -->
    <package name="level"  extends="admin-default">
        <action name="level_*" method="{1}" class="com.stark.asm.web.action.level.LevelAction">
            <!-- 等级信息 -->
            <result name="{1}">/backgroud/level/{1}.jsp</result>
        </action>
    </package>


    <!-- 等级模块 Json -->
    <package name="level_json" extends="json-protected-default">
        <!-- 等级信息 Json -->
        <action name="levelJson_*" method="{1}" class="com.stark.asm.web.action.level.json.LevelJsonAction">
            <result name="out" type="json">
                <param name="ignoreHierarchy">true</param>
                <param name="excludeNullProperties">true</param>
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>
